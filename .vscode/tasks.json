{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "build",
			"args": [
				"--workspace"
			],
			"problemMatcher": [
				"$rustc",
				"$rust-panic"
			],
			"group": "build",
			"label": "rust: cargo build"
		},
		{
			"type": "cargo",
			"command": "test",
			"args": [
				"--workspace"
			],
			"problemMatcher": [
				"$rustc",
				"$rust-panic"
			],
			"group": "test",
			"label": "rust: cargo test"
		},
		{
			"type": "cargo",
			"command": "doc",
			"args": [
				"--no-deps",
				"--workspace",
				"--document-private-items"
			],
			"problemMatcher": [
				"$rustc",
				"$rust-panic"
			],
			"group": "build",
			"label": "rust: cargo doc"
		}
	]
}